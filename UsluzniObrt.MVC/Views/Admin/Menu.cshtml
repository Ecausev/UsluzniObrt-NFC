@model UsluzniObrt.MVC.ViewModels.ItemsViewModel
@{
    ViewBag.Title = "";
}
<h2 class="text-center">View and edit menu</h2>
<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-6 pb-3">
                @Html.ActionLink("New Item", "CreateItem", null, new { @class = "btn btn-success" })
                @Html.ActionLink("New Category", "CreateCategory", null, new { @class = "btn btn-success" })

            </div>
        </div>
    </div>
        @foreach (var item in Model.Items)
        {
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card card-body mb-2">
                        <table class="table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-center text-capitalize">@item.Name</td>
                                    <td class="text-center text-capitalize">@item.Price.ToString("0.00 Kn")</td>
                                    <td class="text-center text-capitalize">@item.Description</td>
                                    <td class="text-center text-capitalize">@item.Category.Name</td>
                                    <td class="text-center text-capitalize">@item.Status</td>
                                    <td class="text-center text-capitalize">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "DeleteItem", new { id = item.Id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
</body>
